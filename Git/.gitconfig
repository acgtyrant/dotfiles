[alias]
  a = add
  b = branch
  c = commit
  co = checkout
  d = diff
  l = log
  s = status
  f = fetch
  g = log --graph --all --oneline
[color]
  ui = on
  pager = no
[core]
  pager = nvimpager
[credential]
  # store your credentials permanently
  # https://stackoverflow.com/a/12240995/1546088
  helper = store
[merge]
  tool = meld
[push]
  # ignore boring warning
  # http://stackoverflow.com/questions/13148066/warning-push-default-is-unset-its-implicit-value-is-changing-in-git-2-0
  default = simple
[user]
  name = acgtyrant
  email = acgtyrant@gmail.com
[log]
	decorate = auto
[status]
  # showStash only work for 2.14.0 and later
  showStash = true
