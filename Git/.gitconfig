[alias]
  a = add
  b = branch
  c = commit
  co = checkout
  d = diff
  l = log
  s = status
[color]
  ui = on
[core]
  pager = less
[credential]
  # store your credentials permanently
  # https://stackoverflow.com/a/12240995/1546088
  helper = store
[merge]
  tool = meld
[push]
  # ignore boring warning
  # http://stackoverflow.com/questions/13148066/warning-push-default-is-unset-its-implicit-value-is-changing-in-git-2-0
  default = simple
