% ctex-xecjk-winfonts.def: Windows 的 xeCJK 字体设置，默认为六种中易字体
% vim:ft=tex

% 粗体、斜体、正体分别为方正兰亭粗黑、方正粗楷斜体、方正兰亭黑
\setCJKmainfont[BoldFont={方正兰亭粗黑_GBK},ItalicFont={方正粗楷简体}] {方正兰亭黑_GBK} 
% 衬线字体用方正兰亭黑
\setCJKsansfont{方正兰亭黑_GBK}
% 等宽字体用文泉驿等宽正黑
\setCJKmonofont{WenQuanYi Zen Hei Mono}

\setCJKfamilyfont{zhmi}{Microsoft YaHei} % 微软雅黑
\setCJKfamilyfont{zhlth}{方正兰亭黑_GBK} % 方正兰亭黑
\setCJKfamilyfont{zhltch}{方正兰亭粗黑_GBK} % 方正兰亭粗黑
\setCJKfamilyfont{zhck}{方正粗楷简体} % 方正粗楷简体
\setCJKfamilyfont{zhdqh}{Hiragino Sans GB} % 苹果冬青黑

\setCJKfamilyfont{zhwqyzh}{WenQuanYi Zen Hei} % 文泉驿正黑
\setCJKfamilyfont{zhwqyzhm}{WenQuanYi Zen Hei Mono} % 文泉驿等宽正黑
\setCJKfamilyfont{zhwqyzhs}{WenQuanYi Zen Hei Sharp} % 文泉驿点阵正黑
\setCJKfamilyfont{zhwqymh}{WenQuanYi Micro Hei} % 文泉驿微米黑
\setCJKfamilyfont{zhwqymhm}{WenQuanYi Micro Hei Mono} % 文泉驿等宽微米黑

\newcommand*{\yahei}{\CJKfamily{zhmi}} % 微软雅黑
\newcommand*{\lth}{\CJKfamily{zhlth}} % 方正兰亭黑
\newcommand*{\ltch}{\CJKfamily{zhltch}} % 方正兰粗亭黑
\newcommand*{\ck}{\CJKfamily{zhck}} % 方正粗楷简体
\newcommand*{\dqh}{\CJKfamily{zhdqh}} % 苹果冬青黑

\newcommand*{\wqyzh}{\CJKfamily{zhwqyzh}} % 文泉驿正黑
\newcommand*{\wqyzhm}{\CJKfamily{zhwqyzhm}} % 文泉驿等宽正黑
\newcommand*{\wqyzhs}{\CJKfamily{zhwqyzhs}} % 文泉驿点阵正黑
\newcommand*{\wqymh}{\CJKfamily{zhwqymh}} % 文泉驿微米黑
\newcommand*{\wqymhm}{\CJKfamily{zhwqymhm}} % 文泉驿等宽微米黑

