% ctex-xecjk-winfonts.def: Windows 的 xeCJK 字体设置，默认为六种中易字体
% vim:ft=tex

\setCJKmainfont[BoldFont={SimHei},ItalicFont={KaiTi}]
  {SimSun}
\setCJKsansfont{SimHei}
\setCJKmonofont{FangSong}

\setCJKfamilyfont{zhsong}{SimSun}
\setCJKfamilyfont{zhhei}{SimHei}
\setCJKfamilyfont{zhkai}{KaiTi}
\setCJKfamilyfont{zhfs}{FangSong}
\setCJKfamilyfont{zhli}{LiSu}
\setCJKfamilyfont{zhyou}{YouYuan}

\setCJKfamilyfont{zhmi}{Microsoft YaHei}
\setCJKfamilyfont{zhlth}{FZLanTingHei_GB18030}
\setCJKfamilyfont{zhdqh}{Hiragino Sans GB}

\setCJKfamilyfont{zhwqyzh}{WenQuanYi Zen Hei}
\setCJKfamilyfont{zhwqyzhm}{WenQuanYi Zen Hei Mono}
\setCJKfamilyfont{zhwqyzhs}{WenQuanYi Zen Hei Sharp}
\setCJKfamilyfont{zhwqymh}{WenQuanYi Micro Hei}
\setCJKfamilyfont{zhwqymhm}{WenQuanYi Micro Hei Mono}

\setCJKfamilyfont{zhapukc}{AR PL UMing CN}
\setCJKfamilyfont{zhapukt}{AR PL UMing TW}
\setCJKfamilyfont{zhapumc}{AR PL UKai CN}
\setCJKfamilyfont{zhapumt}{AR PL UKai TW}
\setCJKfamilyfont{zhapnk}{AR PL New Kai}
\setCJKfamilyfont{zhapns}{AR PL New Sung}
\setCJKfamilyfont{zhapnsm}{AR PL New Sung Mono}

\newcommand*{\songti}{\CJKfamily{zhsong}} % 宋体
\newcommand*{\heiti}{\CJKfamily{zhhei}}   % 黑体
\newcommand*{\kaishu}{\CJKfamily{zhkai}}  % 楷书
\newcommand*{\fangsong}{\CJKfamily{zhfs}} % 仿宋
\newcommand*{\lishu}{\CJKfamily{zhli}}    % 隶书
\newcommand*{\youyuan}{\CJKfamily{zhyou}} % 幼圆
\newcommand*{\yahei}{\CJKfamily{zhmi}} % 微软雅黑

\newcommand*{\wqyzh}{\CJKfamily{zhwqyzh}} % 文泉驿正黑
\newcommand*{\wqyzhm}{\CJKfamily{zhwqyzhm}} % 文泉驿等宽正黑
\newcommand*{\wqyzhs}{\CJKfamily{zhwqyzhs}} % 文泉驿点阵正黑
\newcommand*{\wqymh}{\CJKfamily{zhwqymh}} % 文泉驿微米黑
\newcommand*{\wqymhm}{\CJKfamily{zhwqymhm}} % 文泉驿等宽微米黑

\newcommand*{\apukc}{\CJKfamily{zhapukc}} % AR PL UKai CN
\newcommand*{\apukt}{\CJKfamily{zhapukt}} % AR PL UKai TW
\newcommand*{\apumc}{\CJKfamily{zhapumc}} % AR PL UMing CN
\newcommand*{\apumt}{\CJKfamily{zhapumt}} % AR PL UMing TW
\newcommand*{\apnk}{\CJKfamily{zhapnk}} % 文鼎 PL 新中楷
\newcommand*{\apns}{\CJKfamily{zhapns}} % 文鼎 PL 新宋
\newcommand*{\apnsm}{CJKfamily{zhapnsm}} % 文鼎 PL 新宋 Mono

\newcommand*{\dqh}{CJKfamily{zhdqh}} % 冬青黑
\newcommand*{\lth}{CJKfamily{zhlth}} % 兰亭黑
